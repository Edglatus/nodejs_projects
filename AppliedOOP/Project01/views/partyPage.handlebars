<div class="card" style="margin: 10px">
	<div class="card-header">
		<h1 class="card-title">Party List</h1>
	</div>

	<div class="card-body">
		<form class="form-inline" method="POST" style="margin: 20px 0">
			<div class="form-group">
				<input type="text" name="formName" class="form-control" placeholder="Name" value="{{nameDefault}}">
				<input type="date" name="formDate" class="form-control" placeholder="Date" value="{{dateDefault}}">
				<button type="submit" name="submit" class="btn btn-primary">Post</button>
			</div>
		</form>
		<table class="table">
			<thead>
				<tr>
					<th>Name</th>
					<th>Date</th>
					<th colspan="2">Actions</th>
				</tr>
			</thead>
			<tbody>
				{{#each party}}
				<tr>
					<td>{{name}}</td>
					<td>{{date}}</td>
					<td><a href="/party/delete/{{$loki}}">Delete</a></td>
					<td><a href="/party/update/{{$loki}}">Update</a></td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>
